{
  "name": "havyt-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run generate && next build",
    "start": "next start",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint --ext js,jsx,ts,tsx --fix --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "format-check": "npm run prettier -- --list-different",
    "validate": "npm-run-all --parallel type-check format-check lint build",
    "ts-node": "ts-node --compiler-options '{\"module\":\"commonjs\"}'",
    "generate": "npm run generate:prisma && npm run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "npm run ts-node --transpile-only ./src/lib/graphql/schema",
    "generate:client-types": "graphql-codegen --config codegen.yml",
    "dev:client-types": "graphql-codegen --config codegen.yml --watch",
    "postinstall": "npm run generate"
  },
  "dependencies": {
    "@prisma/client": "^2.29.1",
    "@reach/alert": "^0.14.0",
    "classnames": "^2.2.6",
    "daisyui": "^1.13.2",
    "graphql": "^15.5.1",
    "graphql-helix": "^1.7.0",
    "graphql-scalars": "^1.10.0",
    "next": "^11.1.0",
    "next-s3-upload": "^0.1.6",
    "next-seo": "^4.22.0",
    "next-urql": "^3.2.0",
    "nexus": "^1.1.0",
    "nexus-prisma": "^0.30.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-is": "^17.0.2",
    "urql": "^2.0.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.1.1",
    "@graphql-codegen/typescript": "2.1.0",
    "@graphql-codegen/typescript-operations": "2.1.0",
    "@graphql-codegen/typescript-urql": "^3.1.0",
    "@next/eslint-plugin-next": "^11.1.0",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.3.2",
    "@tailwindcss/jit": "^0.1.5",
    "@tailwindcss/typography": "^0.4.0",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.8",
    "prettier": "^2.2.1",
    "prisma": "2.29.1",
    "tailwindcss": "^2.0.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "CI=1 npm-run-all --parallel type-check && lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|ts|tsx)": [
      "yarn run lint"
    ],
    "*.+(js|json|ts|tsx)": [
      "yarn run format"
    ]
  }
}
